---
// Contact Section Component
---

<section id="contact" class="py-24 px-6 lg:px-24 bg-white relative">
    <div class="max-w-3xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center mb-12">
            <h4 class="text-sm font-bold uppercase tracking-widest text-brand-teal mb-2 font-mono">Connect with me</h4>
            <h2 class="text-4xl md:text-5xl font-serif font-bold text-brand-dark">Get in touch</h2>
        </div>

        <!-- Form -->
        <form action="#" method="POST" class="space-y-6">
            <!-- Honeypot Field (Hidden) - Spam Prevention -->
            <div class="hidden" aria-hidden="true">
                <input type="text" name="_honey" id="_honey" tabindex="-1" autocomplete="off">
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div class="flex flex-col">
                    <label for="name" class="sr-only">Name</label>
                    <input type="text" id="name" name="name" placeholder="Name" required
                        class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-teal focus:border-transparent transition">
                </div>
                <!-- Email -->
                <div class="flex flex-col">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" id="email" name="email" placeholder="Email" required
                        class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-teal focus:border-transparent transition">
                </div>
            </div>

            <!-- Subject -->
            <div class="flex flex-col">
                <label for="subject" class="sr-only">Subject</label>
                <input type="text" id="subject" name="subject" placeholder="Subject" required
                    class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-teal focus:border-transparent transition">
            </div>

            <!-- Message -->
            <div class="flex flex-col">
                <label for="message" class="sr-only">Message</label>
                <textarea id="message" name="message" rows="5" placeholder="How can I help you?" required
                    class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-brand-teal focus:border-transparent transition resize-none"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-start">
                <button type="submit" class="group bg-brand-dark text-white rounded-full px-8 py-3 font-medium hover:bg-black transition flex items-center gap-2">
                    Send Message
                    <i class="fas fa-arrow-right transform group-hover:translate-x-1 transition-transform"></i>
                </button>
            </div>
        </form>

    </div>
</section>

---
// Skills Section Component
---

<section id="skills" class="py-20 px-6 lg:px-24 bg-white relative">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold font-serif text-brand-dark mb-12 text-center">Technical Skills</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            
            <!-- Category: Networking -->
            <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 shadow-sm tech-corner">
                <h3 class="font-bold text-brand-teal mb-4 flex items-center gap-2">
                    <i class="fas fa-network-wired"></i> Networking
                </h3>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">OSPF & BGP</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">VLANs</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Routing</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Switching</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Firewalls</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">TCP/IP</span>
                </div>
            </div>

            <!-- Category: IoT -->
            <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 shadow-sm tech-corner">
                <h3 class="font-bold text-brand-teal mb-4 flex items-center gap-2">
                    <i class="fas fa-microchip"></i> IoT & Embedded
                </h3>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">MQTT</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">ESP32</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Electricity</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">3d Design</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Sensors</span>
                </div>
            </div>

            <!-- Category: Programming -->
            <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 shadow-sm tech-corner">
                <h3 class="font-bold text-brand-teal mb-4 flex items-center gap-2">
                    <i class="fas fa-code"></i> Programming
                </h3>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Python</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">C++</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Linux / Bash</span>
                    <span class="px-3 py-1 bg-white border border-gray-200 rounded-full text-xs font-mono text-gray-700">Git</span>
                </div>
            </div>
        </div>
    </div>
</section>
